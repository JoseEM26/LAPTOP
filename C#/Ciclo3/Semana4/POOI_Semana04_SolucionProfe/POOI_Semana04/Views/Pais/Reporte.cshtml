@model IEnumerable<POOI_Semana04.Models.Pais>

@{
    ViewBag.Title = "Reporte";
}

<h2>Reporte de Paises</h2>

<p>
    @Html.ActionLink("Registrar Pais", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.country_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.country_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.region_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.country_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.country_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.region_id)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new {  codigo= item.country_id }) |
            @Html.ActionLink("Detalle", "DetalleRegistro", new {  codigo=item.country_id  }) |
            @Html.ActionLink("Delete", "Eliminar", new {  codigo=item.country_id })
        </td>
    </tr>
}

</table>
