    <script>
        window.bootstrapModal = {
            show: (modalId) => {
                const modal = new bootstrap.Modal(document.querySelector(modalId));
                modal.show();
            },
            hide: (modalId) => {
                const modalElement = document.querySelector(modalId);
                const modalInstance = bootstrap.Modal.getInstance(modalElement);
                if (modalInstance) {
                    modalInstance.hide();
                }
            }
        };
    </script>

