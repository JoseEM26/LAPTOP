@model WebApplication1.Models.Editorial

@{
    ViewData["Title"] = "Crear Editorial";
}

<h1>Crear Editorial</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="CodigoEditorial" class="control-label"></label>
                <input asp-for="CodigoEditorial" class="form-control" placeholder="Ej: ED001" />
                <span asp-validation-for="CodigoEditorial" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NombreEditorial" class="control-label"></label>
                <input asp-for="NombreEditorial" class="form-control" />
                <span asp-validation-for="NombreEditorial" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- COMBO DE PAÍSES -->
            <div class="form-group mb-3">
                <label asp-for="CodigoPais" class="control-label">País</label>
                <select asp-for="CodigoPais" class="form-control" asp-items="@ViewBag.Paises">
                    <option value="">-- Seleccione un país --</option>
                </select>
                <span asp-validation-for="CodigoPais" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}