@model WebApplication1.Models.Editorial

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Editorial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoEditorial" class="control-label"></label>
                <input asp-for="CodigoEditorial" class="form-control" />
                <span asp-validation-for="CodigoEditorial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreEditorial" class="control-label"></label>
                <input asp-for="NombreEditorial" class="form-control" />
                <span asp-validation-for="NombreEditorial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <!-- COMBO DE PAÍSES (perfecto y funcional) -->
            <div class="form-group mb-3">
                <label asp-for="CodigoPais" class="control-label">País</label>
                <select asp-for="CodigoPais" class="form-select" asp-items="@ViewBag.Paises">
                    <option value="">-- Seleccione un país --</option>
                </select>
                <span asp-validation-for="CodigoPais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
